<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="20dp">

    <!-- Título do Resumo -->
    <TextView
        android:id="@+id/tvPedidoTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resumo do Pedido"
        android:textColor="#4CAF50"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Linha Divisória -->
    <View
        android:id="@+id/divisoriaResumo"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#4CAF50"
        app:layout_constraintTop_toBottomOf="@id/tvPedidoTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Descrição do Pedido -->
    <TextView
        android:id="@+id/tvPedidoResumo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:lineSpacingExtra="6dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/divisoriaResumo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Linha Divisória -->
    <View
        android:id="@+id/divisoriaTotal"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@id/tvPedidoResumo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Valor Total -->
    <TextView
        android:id="@+id/tvPedidoValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor Total: R$ 00,00"
        android:textColor="#4CAF50"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/divisoriaTotal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
