<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="16dp">

    <!-- Título do Resumo -->
    <TextView
        android:id="@+id/tvPedidoTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resumo do Pedido"
        android:textColor="#4CAF50"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Linha Divisória -->
    <View
        android:id="@+id/divisoriaResumo"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvPedidoTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Descrição do Pedido -->
    <TextView
        android:id="@+id/tvPedidoResumo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Itens: "
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/divisoriaResumo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Linha Divisória -->
    <View
        android:id="@+id/divisoriaTotal"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvPedidoResumo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Valor Total -->
    <TextView
        android:id="@+id/tvPedidoValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor Total: R$ 70,00"
        android:textColor="#4CAF50"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/divisoriaTotal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
